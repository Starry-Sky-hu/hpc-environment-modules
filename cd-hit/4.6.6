set appname     cd-hit
set version     4.6.6
set prefix      /export/apps/${appname}/${version}
set url         "http://weizhongli-lab.org/cd-hit/"
set msg         "A program for clustering and comparing protein or nucleotide sequences.\nOfficial site: ${url}"

conflict    ${appname}

module-whatis $msg

# depends on openmpi
if { ![is-loaded openmpi] } {
    module load openmpi/1.8.2
}

prepend-path    PATH    ${prefix}
