set appname         pblat
set version         2.1
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             'https://github.com/icebert/pblat'
set msg             'parallelized blat with multi-threads support.\nOfficial site: $url\n'

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}

