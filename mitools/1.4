set     appname         mitools
set     version         1.4
set     prefix          /export/apps/${appname}/${version}
set     url             "https://github.com/milaboratory/mitools"
set     msg             "MiTools is a Next Generation Sequencing (NGS) data processing tool (based on MiLib).\nMiTools official site: $url\n"

conflict	$appname

module-whatis $msg

prepend-path    PATH                ${prefix}

