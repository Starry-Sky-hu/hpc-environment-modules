set appname     lighter
set version     1.1.2
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/mourisl/Lighter"
set msg         "Lighter is a kmer-based error correction method for whole genome sequencing data.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}

