# for Tcl script use only
set appname     multiqc
set version     1.4
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set msg         "MultiQC is a reporting tool that parses summary statistics from results and log files generated by other bioinformatics tools.\nOfficial Site: http://multiqc.info/docs/"

conflict $appname

module-whatis $msg

prepend-path    PATH       ${exec_prefix}
prepend-path    PYTHONPATH ${prefix}/lib/python3.6/site-packages

# multiqc uses a virtual environment created with python/3.6.2 and probably
# doesn't need this loaded, but let's just leave it here so that I remember
# that it's a dependency when I'm cleaning up python versions in the future
if { ![is-loaded python/3.6.2] } { 
    module load python/3.6.2
}

