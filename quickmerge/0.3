set appname     quickmerge
set version     0.3
set prefix      /export/apps/${appname}/${version}
set url         "https://github.com/mahulchak/quickmerge"
set msg         "A simple and fast metassembler and assembly gap filler designed for long molecule based assemblies.\n$appname official site: $url\n"

conflict        $appname

module-whatis   $msg

# quickmerge expects MUMmer/3.23 to be available
if { ![is-loaded MUMmer/3.23] } {
    module load MUMmer/3.23
}

prepend-path    PATH    ${prefix}

