set appname         hapflk
set version         1.4
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://forge-dga.jouy.inra.fr/projects/hapflk"
set msg             "hapflk is a software implementing the hapFLK and FLK tests for the detection of selection signatures based on multiple population genotyping data.\nOfficial Site: $url\n"

module-whatis $msg

proc ModulesHelp { } {
    puts stderr "$msg"
}

conflict            $appname

prepend-path        PATH            ${exec_prefix}
# hapflk depends on scipy and numpy as well as its own modules
prepend-path        PYTHONPATH      ${prefix}/lib/python2.7/site-packages

# hapflk uses a virtualenv based on python/2.7.13 so we should make sure that
# module is loaded.
if { ![is-loaded python/2.7.13] } { 
    module load python/2.7.13
}

