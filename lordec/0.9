set appname         lordec
set version         0.9
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             'https://www.lirmm.fr/~rivals/lordec/'
set msg             "LoRDEC: hybrid correction of long reads.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr     $msg
}

module-whatis       $msg

conflict            $appname

prepend-path        PATH    ${exec_prefix}

