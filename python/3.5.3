prepend-path        PATH		${exec_prefix}/bin
prepend-path        MANPATH		${datarootdir}/man
setenv              PYTHONHOME	${prefix}
prepend-path        LD_LIBRARY_PATH /export/apps/${appname}/${version}/lib
