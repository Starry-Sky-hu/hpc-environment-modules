set appname         varscan
set version         2.4.2
set prefix          /export/apps/${appname}/${version}

conflict        varscan

prepend-path    PATH        ${prefix}
# some software use varscan and expect it to be present in the CLASSPATH.
prepend-path    CLASSPATH   ${prefix}/VarScan.v2.4.2.jar

# varscan requires bam-readcount
if { ![is-loaded bam-readcount] } {
    module load bam-readcount/0.8.0
}

