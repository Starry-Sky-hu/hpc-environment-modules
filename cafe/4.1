set appname         cafe
set version         4.1
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://hahnlab.github.io/CAFE/index.html"
set msg             "Software for Computational Analysis of gene Family Evolution.\nOfficial Site: $url"

module-whatis $msg

proc ModulesHelp { } {
    puts stderr $msg
}

conflict    cafe

prepend-path    PATH    ${exec_prefix}

