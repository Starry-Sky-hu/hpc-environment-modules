set appname         perl
set version         5.28.2
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set datarootdir     ${prefix}/man
set url             "https://www.perl.org/"
set msg             "Perl 5 is a highly capable, feature-rich programming language.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr     $msg
}

module-whatis       $msg

conflict            $appname

prepend-path        PATH    ${exec_prefix}
prepend-path        MANPATH ${datarootdir}

