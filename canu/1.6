# for Tcl script use only
set     appname         canu
set     version         1.6
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     msg             "Canu is specialized for assembly of single-molecule high-noise sequences.\nOfficial Site: http://canu.readthedocs.org"

conflict	$appname

module-whatis $msg

prepend-path    PATH            ${exec_prefix}

# canu needs perl >= 5.12.0
if { ![is-loaded perl/5.22.3] } { 
    module load perl/5.22.3
}

