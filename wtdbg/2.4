set appname         wtdbg
set version         2.4
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             'https://github.com/ruanjue/wtdbg2'
set msg             "A fuzzy Bruijn graph approach to long noisy reads assembly.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis       $msg

conflict            $appname

prepend-path        PATH        ${exec_prefix}
prepend-path        PATH        ${prefix}/scripts

