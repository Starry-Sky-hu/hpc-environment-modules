# for Tcl script use only
set     appname         presto
set     version         0.5.3
set     prefix          /export/apps/${appname}/${version}
set     url             "http://presto.readthedocs.io"
set     msg             "pRESTO is a toolkit for processing raw reads from high-throughput sequencing of lymphocyte repertoires.\npRESTO official site: $url\n"

conflict	$appname

module-whatis $msg

# presto/0.5.3 requires python/3.4.3, muscle/3.8.31 & usearch/v7.0.1090
if { ![is-loaded python/3.4.3] } {
    module load python/3.4.3
}
if { ![is-loaded muscle/3.8.31] } {
    module load muscle/3.8.31
}
if { ![is-loaded usearch/v7.0.1090] } {
    module load usearch/v7.0.1090
}

prepend-path    PATH            ${prefix}/bin
prepend-path    PYTHONPATH      ${prefix}/lib/python3.4/site-packages

