set appname     genometools
set version     1.5.9
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "http://genometools.org/"
set msg         "The versatile open source genome analysis software.\nOfficial Site: $url\n"

module-whatis $msg

proc ModulesHelp { } {
    puts stderr "$msg"
}

conflict        $appname

prepend-path    PATH            ${prefix}

prepend-path    LD_LIBRARY_PATH ${prefix}/lib
# Populate some ronment variables for things that need to compile or link
# against genomes. From the `genometools-config` program.
prepend-path    CPPFLAGS        -I${prefix}/include
prepend-path    LDFLAGS         -I${prefix}/lib

