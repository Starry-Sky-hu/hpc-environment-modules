set appname     genometools
set version     1.6.1
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "http://genometools.org/"
set msg         "The versatile open source genome analysis software.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}

