# for Tcl script use only
set     appname         nextclip
set     version         1.3.1
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin

conflict    $appname

prepend-path    PATH            ${exec_prefix}
prepend-path    PATH            ${prefix}/scripts

# According to nextclipmanual.pdf, nextclip wants BWA >= 0.6.1
if { ![is-loaded bwa/0.7.4] } { 
    module load bwa/0.7.4
}

# According to nextclipmanual.pdf, nextclip wants R >= 2.12.2
if { ![is-loaded R/3.3.3] } { 
    module load R/3.3.3
}
