# for Tcl script use only
set     appname         mixcr
set     version         2.0.1
set     prefix          /export/apps/${appname}/${version}
set     url             "https://github.com/milaboratory/mixcr"
set     msg             "MiXCR is a universal software for fast and accurate analysis of raw T- or B- cell receptor repertoire sequencing data.\nMiXCR official site: $url\n"

conflict	$appname

module-whatis $msg

prepend-path    PATH        ${prefix}

