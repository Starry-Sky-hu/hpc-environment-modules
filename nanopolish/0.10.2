set appname         nanopolish
set version         0.10.2
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://github.com/jts/nanopolish"
set msg             "Software package for signal-level analysis of Oxford Nanopore sequencing data.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

# nanopolish compiles its own versions of hdf5 and htslib and uses a virtualenv
# from CentOS 7's Python 3.6 for biopython and pysam.
conflict $appname hdf5 htslib python

prepend-path    PATH        ${exec_prefix}
prepend-path    PATH        ${prefix}/scripts
prepend-path    PYTHONPATH  ${prefix}/lib/python3.6/site-packages

