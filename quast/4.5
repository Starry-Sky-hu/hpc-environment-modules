# for Tcl script use only
set     appname         quast
set     version         4.5
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     msg             "QUAST evaluates genome assemblies.\nURL: http://quast.sourceforge.net/quast"

conflict	$appname

module-whatis $msg

prepend-path    PATH            ${exec_prefix}
prepend-path    PYTHONPATH      ${prefix}/lib/python3.5/site-packages

# quast uses a virtualenv based on python/3.5.3 so we should make sure that
# module is loaded.
if { ![is-loaded python/3.5.3] } {
	module load python/3.5.3
}
