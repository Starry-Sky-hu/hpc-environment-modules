set appname     AdapterRemoval
set version     2.3.1
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set datarootdir ${prefix}/share
set url         "https://github.com/MikkelSchubert/adapterremoval"
set msg         "AdapterRemoval searches for and removes adapter sequences from High-Throughput Sequencing (HTS) data.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}
prepend-path    MANPATH     ${datarootdir}/man

