set appname     fastANI
set version     1.3
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/ParBLiSS/FastANI"
set msg         "Fast Whole-Genome Similarity (ANI) Estimation.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH    ${exec_prefix}

